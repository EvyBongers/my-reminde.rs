{
  "name": "my-reminde.rs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "firebase": "cd firebase && firebase",
    "functions-npm": "docker run -it --rm --user node:users -v ${PWD}/firebase/functions:/usr/share/app -w /usr/share/app node:16-alpine npm",
    "setup": "tmux new-session -d -s packages pnpm install; tmux split-window -v pnpm run functions-npm install; tmux attach-session -t packages",
    "update": "tmux new-session -d -s packages pnpm update; tmux split-window -v pnpm run functions-npm update; tmux attach-session -t packages",
    "upgrade": "tmux new-session -d -s packages pnpm update --latest; tmux split-window -v pnpm run functions-npm update --latest; tmux attach-session -t packages",
    "devserver": "pnpm webpack serve --config webpack.dev.js",
    "emulator": "pnpm run firebase emulators:start --export-on-exit .firestore-data --import .firestore-data --inspect-functions",
    "functions": "pnpm run functions-npm run build --",
    "build": "pnpm webpack build --config webpack.prod.js & pnpm run functions & wait",
    "deploy": "pnpm run build && pnpm run firebase deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "firebase": "^9.19.1",
    "html-webpack-plugin": "^5.5.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-checkbox": "^0.27.0",
    "@material/mwc-circular-progress": "^0.27.0",
    "@material/mwc-dialog": "^0.27.0",
    "@material/mwc-fab": "^0.27.0",
    "@material/mwc-formfield": "^0.27.0",
    "@material/mwc-icon": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-icon-button-toggle": "^0.27.0",
    "@material/mwc-list": "^0.27.0",
    "@material/mwc-menu": "^0.27.0",
    "@material/mwc-ripple": "^0.27.0",
    "@material/mwc-select": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "@material/mwc-switch": "^0.27.0",
    "@material/mwc-tab": "^0.27.0",
    "@material/mwc-tab-bar": "^0.27.0",
    "@material/mwc-textfield": "^0.27.0",
    "@material/mwc-top-app-bar-fixed": "^0.27.0",
    "cron-parser-all": "^0.0.6",
    "lit": "^2.7.2",
    "lit-element-router": "^2.0.3"
  }
