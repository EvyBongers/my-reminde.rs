{
  "name": "justdoit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "pnpm install & npm run docker-functions -- npm install & wait",
    "devserver": "npx webpack serve --config webpack.dev.js",
    "docker-functions": "docker run -it --rm -v ${PWD}/firebase/functions:/usr/share/app -w /usr/share/app node:16-alpine",
    "functions": "npm run docker-functions -- npm run build --",
    "firebase": "cd firebase && firebase",
    "emulator": "npm run firebase -- emulators:start --export-on-exit .firestore-data --import .firestore-data --inspect-functions",
    "build": "npx webpack build --config webpack.prod.js & npm run functions & wait",
    "deploy": "npm run build && npm run firebase -- deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "firebase": "^9.8.3",
    "html-webpack-plugin": "^5.5.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@material/mwc-button": "^0.26.1",
    "@material/mwc-icon": "^0.26.1",
    "@material/mwc-snackbar": "^0.26.1",
    "@material/mwc-textfield": "^0.26.1",
    "lit": "^2.2.5"
  }
}
